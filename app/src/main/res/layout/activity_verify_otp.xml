<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_verify_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_verify_et_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/text_otp" />

        <EditText
            android:id="@+id/activity_verify_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:hint="Enter Code"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true" />

    <Button
        android:id="@+id/activity_verify_bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_verify_et_id"
        android:background="@drawable/login_button_bg"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:onClick="attemptLogin"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Validate"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
